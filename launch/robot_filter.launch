<?xml version="1.0"?>
<launch>
    <!-- Prerequisite: sensor_filters -->
    <!-- http://wiki.ros.org/sensor_filters -->
    <node name="cloud_filter" pkg="sensor_filters" type="pointcloud2_filter_chain" output="screen">
        <rosparam command="load" file="$(find voxposer_ros)/config/filtering_params.yaml" />
        <remap from="/cloud_filter/input" to="/camera/depth/points"/>
        <remap from="/cloud_filter/output" to="/camera/depth/points_filtered"/>
    </node>
</launch>